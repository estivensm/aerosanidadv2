                    <tr>
                     <th width="30%">Tipo:</th>
                        <th width="30%">Descripci√≥n:</th>
                        <th width="30%">Adjuntar Anexo:</th>
                        
                       
                    </tr> 
                  </thead>
                  <tbody>
                    <tr>
                        <%= f.hidden_field :user_id, :value => current_user.id %>
