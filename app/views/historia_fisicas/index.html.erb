
<br>
<div class="container-fluid">

  <div class="row">

    <div class="col-lg-12">

      <span  class="btn btn-link btn-xs  pull-left pagination pagination">
        <h1 class="title">Archivos Adjuntos</h1>
      </span>

      <span  class="pagination pull-right">
        <%= link_to 'Adjuntar Archivos', new_paciente_historia_clinica_historia_fisica_path(@paciente,@historia_clinica), :class =>"btn   btn-info color_blanco" %></span>

   

      <table class="table table-bordered table-hover">

        <thead>
          <tr>
            <th  colspan="7">

              <%= form_tag request.path, :method =>
              'get', :class => '' do %>
              <div>
                <div class="row">

                  <div class="col-lg-5 ">

                    <div class="input-group custom-search-form">
                      <%= text_field_tag :search, params[:search], :placeholder =>
                      "Busca por el Nombre", :class => 'form-control' %>
                      <span class="input-group-btn">

                        <%= button_tag(type: "submit", class: "btn principal") do %>
                        <span class="glyphicon glyphicon-search"></span>
                        <% end %></span>
                    </div>
                    <!-- /input-group --> </div>
                </div>
              </div>
              <% end %></th>

          </tr>

          <tr class="x1">
            <th width="5% !important;">Id</th>
            <th width="15% !important;">Tipo</th>
            <th width="30% !important;">Descripción</th>
            <th width="30% !important;">Nombre de Archivo</th>
            <th width="25% !important;">opciones</th>
             <th width="5% !important;"></th>
            

          </tr>

          <% @historia_fisicas.each do |historia_fisica| %>

          <tr class="x">

         
             <td> <%= historia_fisica.id %></td>
            <td>  <%= historia_fisica.tipo %></td>
            <td>
              <%= historia_fisica.descripcion %></td>
               <td>
               <%= historia_fisica.adjunto.file.filename %></td>
              <td>
              
              <%= link_to "(Descargar)", historia_fisica.adjunto.url, style: "color:#828282" %> <a class="linka" href="https://docs.google.com/viewerng/viewer?url=http://aerosanidadvirtual.com<%=historia_fisica.adjunto_url%>" >(Ver )</a></td>

            <td>

              <style type="text/css" media="screen">
.icono {
    font-size: 16px;
    color: #848484;
}
  
</style>

              

              <%= link_to edit_paciente_historia_clinica_historia_fisica_path(@paciente,@historia_clinica,historia_fisica), class: "btn btn-link btn-xs", title: "Editar nota de evolución" do %> <i class="glyphicon glyphicon-pencil icono"></i>
              <% end %></td>

          </tr>

          <% end %></table>

        <style type="text/css">

.eliminar {
    color: red;
}

</style>

        <style>.x td
{
   padding: 5px 10px !important;
    background-color: #FBFBFB;
    color: #828282;
  }
    .x1 th
    {
      color: #67B0C7!important;
      background: #EFEFEF;
      font-size: 15px;      }

      </style>

      </div>
      <style type="text/css">
    @import url(http://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css);
body{margin-top:20px;}
.fa-fw {width: 2em;}
</style>
